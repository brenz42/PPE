{% extends "base.html.twig" %}

{% block title %} {{ parent() }} - Ajout d'une équipe {% endblock %}

{% block contenu %}

{% if form.valide is defined %}
{% if form.valide == true %}
<h1 class="h3 mb-3 font-weight-normal">Ajout réussi</h1>
{% else %}
<h1 class="h3 mb-3 font-weight-normal">{{ form.valide.message }}</h1>
{% endif %}
{% else %}


<div class="content-body">
    <div class="row match-height">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title" id="basic-layout-form-center">Ajout d'une équipe</h4>
                </div>
                <div class="card-body collapse in">
                    <div class="card-block">

                        <div class="card-text">
                            <p>Renseignez les champs suivants afin d'ajouter une équipe dans la base de données.</p>
                        </div>

                        <form class="form" action="index.php?page=equipeajout" method="post" enctype="application/x-www-form-urlencoded">
                            <div class="row">
                                <div class="col-md-6 offset-md-3">
                                    <div class="form-body">
                                        <div class="form-group">
                                            <label for="inputLibelle" class="sr-only">Libellé</label>
                                            <input type="text" id="inputLibelle" class="form-control" placeholder="Libellé"
                                                name="inputLibelle" required autofocus>
                                        </div>

                                        <div class="form-group">
                                            <label for="inputIdResponsable" class="sr-only">Responsable de l'équipe</label>
                                            <select name="inputIdResponsable" class="form-control">
                                                <option value="non" selected="" disabled="">Responsable non identifié</option> 
                                                {% for r in form.liste %}
                                                    <option value="{{ r.iddev }}">{{ r.nom }} {{ r.prenom }}</option> 
                                                {% endfor%}    
                                            </select>                                            
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="form-actions center">
                                <button type="button" class="btn btn-danger mr-1">
                                    <a href="index.php?page=equipe" class="ppe-btn-link">
                                        <i class="icon-cross2"></i> Annuler
                                    </a>
                                </button>
                                <button type="submit" name="btAjouter" class="btn btn-primary">
                                    <span><i class="icon-check2"></i> Ajouter</span>
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endif %}
{% endblock %}