{% extends "base.html.twig" %}

{% block title %} {{ parent() }} - Gestion des Projets {% endblock %}

{% block contenu %}

{% if form.valide is defined %}
{% if form.valide == true %}
<h1 class="h3 mb-3 font-weight-normal">{{ form.message }}</h1>
{% else %}
<h1 class="alert alert-danger" role="alert">{{ form.message }}</h1>
{% endif %}
{% endif %}

<h1 class="ppe-h1-listing"> Gestion des Projets </h1>
<a class="btn btn-green btn-min-width mr-1 mb-1 float-xs-right" href="index.php?page=projetajout" role="button">
    <i class="icon-plus3"></i> Ajouter
</a>

<div class="panel">
    <!-- Default panel contents -->
    <div class="row">
        <div class="col-xs-12">
            <div class="table-responsive ppe-table-responsive">
                <table id="table" class="table table-hover table-striped table-bordered text-xs-center">
                    <thead class="bg-primary">
                        <tr class="text-uppercase white">
                            <th class="no-filter">Libell√©</th>
                            <th class="no-filter">Actif</th>
                            <th class="no-filter">Equipe</th>
                            <th class="no-filter">Nom</th>
                            <th class="no-filter">Cout</th>
                            <th class="nothing">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for p in liste %}
                        <tr>
                            <td>
                                {{ p.libelle }}
                            </td>
                            <td>
                                {{ p.actif }}
                            </td>
                            <td>
                                {{ p.Equipe }}
                            </td>
                            <td>
                                {{ p.nom }}
                            </td>
                            <td>
                                {{ p.cout_global }}
                            </td>

                            <td>
                                <a class="btn btn-info btn-min-width mr-1 mb-1"
                                    href="index.php?page=projetmodif&idprojet={{ p.idprojet }}" role="button">
                                    <i class="icon-edit2"></i> Modifier
                                </a>
                                <a class="btn btn-danger btn-min-width mr-1 mb-1"
                                    href="index.php?page=projet&idprojet={{ p.idprojet }}" role="button">
                                    <i class="icon-trash-o"></i> Supprimer
                                </a>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

{% endblock %}